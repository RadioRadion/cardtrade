<div class="container">
<% if current_user = @user %>
  <div class="row justify-content-between">
    <div class="col-4">
      <h2>COLLECTION</h2>
      <% @cards.each do |card| %>
      <%= card.name %>
      <%= link_to "Del", user_card_path(card), method: :delete, class: "btn btn-warning"%>
      <%= link_to "edit", edit_user_card_path(card), class: "btn btn-warning"%>
      <% end  %>
      <%= link_to "Add card", new_user_card_path(current_user), class: 'btn btn-secondary' %>
    </div>
    <div class="col-4">
      <h2>WANTLIST</h2>
      <% @wants.each do |want| %>
      <%= want.name %>
      <%= link_to "Del", user_want_path(want), method: :delete, class: "btn btn-warning"%>
      <%= link_to "edit", edit_user_want_path(want), class: "btn btn-warning"%>
      <% end %>
      <%= link_to "Add card", new_user_want_path(current_user), class: 'btn btn-secondary' %>
    </div>
  </div>
  <% else %>
    test
  <% end %>
</div>




